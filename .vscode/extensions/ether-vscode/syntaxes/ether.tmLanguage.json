{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Ether",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#chars"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.eth",
                    "begin": "//",
                    "end": "$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.eth",
                    "match": "\\b(return|if|else|while|for|spawn|yield|await|coroutine|struct|sizeof)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.eth",
                    "match": "\\b(i8|i16|i32|i64|f32|f64|string|void|ptr)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.eth",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.eth",
                    "match": "\\\\."
                }
            ]
        },
        "chars": {
            "name": "string.quoted.single.eth",
            "begin": "'",
            "end": "'",
            "patterns": [
                {
                    "name": "constant.character.escape.eth",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.eth",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "name": "keyword.other.directive.eth",
                    "match": "^\\s*#include\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.eth",
                    "match": "(\\+\\+|--|==|!=|<=|>=|&&|\\|\\||[\\+\\-\\*/%=<>!&|\\^~\\.])"
                }
            ]
        }
    },
    "scopeName": "source.eth"
}