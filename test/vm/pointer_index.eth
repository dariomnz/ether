// EXPECTED_OUTPUT: Array element 0: 10
// EXPECTED_OUTPUT: Array element 1: 20
// EXPECTED_OUTPUT: Array element 2: 30
// EXPECTED_OUTPUT: Array element 3: 40
// EXPECTED_OUTPUT: Modified element 2: 99
#include "std/io.eth"

void main() {
    // Allocate space for 4 integers
    ptr(i32) arr = malloc(4 * sizeof(i32));
    
    // Initialize array using index operator
    arr[0] = 10;
    arr[1] = 20;
    arr[2] = 30;
    arr[3] = 40;
    
    // Read and print using index operator
    printf("Array element 0: %d\n", arr[0]);
    printf("Array element 1: %d\n", arr[1]);
    printf("Array element 2: %d\n", arr[2]);
    printf("Array element 3: %d\n", arr[3]);
    
    // Modify an element
    arr[2] = 99;
    printf("Modified element 2: %d\n", arr[2]);
    
    free(arr);
}
