// EXPECTED_OUTPUT: Heap Point: 42, 84
// EXPECTED_OUTPUT: Updated Heap Point: 41, 42
#include "std/io.eth"

struct Point {
    i32 x;
    i32 y;
}

void main() {
    ptr(Point) p = malloc(sizeof(Point));
    
    p.x = 42;
    p.y = 84;
    
    printf("Heap Point: %d, %d\n", p.x, p.y);
    
    p.x--;
    p.y = p.y / 2;
    
    printf("Updated Heap Point: %d, %d\n", p.x, p.y);
    
    free(p);
}
